---
// Props for the ProjectCard component
interface Props {
  title: string;
  description: string;
  imageSrc?: string;
  imageAlt?: string;
  badges?: string[];
  imageWidth?: number;
  imageHeight?: number;
  imageClass?: string;
  url?: string;
}

// Destructure props with default values
const { 
  title, 
  description, 
  imageSrc = "/placeholder.svg", 
  imageAlt = "Project Image", 
  badges = [],
  imageWidth = 400,
  imageHeight = 300,
  imageClass = "w-full h-full object-cover transition-transform duration-300",
  url = "/projects/" + title.toLowerCase().replace(/ /g, '-')
} = Astro.props;

// Import components
import { Badge } from "@/components/ui/badge";
import { Image } from "astro:assets";
---

<a href={url} class="block border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden hover:shadow-lg hover:bg-primary/10 transition-all duration-300 cursor-pointer hover:scale-105">
  <!-- Card Image -->
  <div class="w-full h-48 bg-gray-200 dark:bg-gray-800 overflow-hidden flex items-center justify-center">
    {imageSrc.endsWith('.svg') ? (
      <Image
        src={imageSrc}
        alt={imageAlt}
        width={imageWidth}
        height={imageHeight}
        class={imageClass}
      />
    ) : (
      <Image
        src={imageSrc}
        alt={imageAlt}
        class="w-full h-full object-cover transition-transform duration-300"
        width={imageWidth}
        height={imageHeight}
        inferSize={true}
      />
    )}
  </div>
  
  <!-- Card Content -->
  <div class="p-4">
    <h3 class="text-xl font-bold mb-2">
      {title}
    </h3>
    <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">
      {description}
    </p>
    
    <!-- Card Footer with Badges -->
    <div class="flex flex-wrap gap-2 mt-auto">
      {badges.map((badge) => (
        <Badge variant="outline">{badge}</Badge>
      ))}
    </div>
  </div>
</a>
