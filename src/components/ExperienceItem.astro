---
interface Props {
  title: string;
  company: string;
  period: string;
  description: string;
}

const { title, company, period, description } = Astro.props;
---

<div class="flex gap-6 items-start  justify-start select-none border-l border-gray-300">
  <div class="relative">
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 translate-y-4/2 w-4 h-4 rounded-full bg-primary"></div>
  </div>
  <div class="flex-1 mt-5">
    <!-- <h3 class="text-xl font-bold text-white">{title}</h3> -->
    <h4 class="text-lg font-semibold text-primary mb-1">{company}</h4>
    <p class="text-sm text-gray-400 mb-3">{period}</p>
    <p class="text-text">{description}</p>
  </div>
</div>
