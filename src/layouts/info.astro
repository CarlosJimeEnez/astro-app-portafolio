---
import { Button } from "@/components/ui/button";
import { Mail, Instagram, Youtube, Github, Linkedin } from "lucide-react";
---

<div class="w-full bg-gradient-to-b from-emerald-950 to-black py-16 px-4">
    <div class="container mx-auto">
        <div class="flex flex-col md:flex-row justify-between items-center gap-8 mb-16">
            <div class="max-w-2xl">
                <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Ready to take your idea to the <span class="block">next level?</span> <span class="text-emerald-400">Let's work together.</span></h2>
            </div>
            <div>
                <Button variant="default" size="lg" className="bg-emerald-500 hover:bg-emerald-600 text-white rounded-full px-8 py-6">
                    <Mail className="mr-2" /> Contact Me
                </Button>
            </div>
        </div>
    </div>
    
    <div class="border-t border-gray-800 pt-8 mt-8">
        <div class="container mx-auto">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <div class="flex items-center mb-4 md:mb-0">
                    <h3 class="text-2xl font-bold text-white mr-2">EFEELE</h3>
                    <div class="text-gray-400 flex items-center">
                        <code class="mr-2">&lt;/&gt;</code> Developed by <span class="font-semibold ml-2">EFEELE</span>, with Astro
                    </div>
                </div>
                <div class="flex space-x-4">
                    <a href="#" aria-label="Email" class="text-gray-400 hover:text-white">
                        <Mail size={20} />
                    </a>
                    <a href="#" aria-label="Instagram" class="text-gray-400 hover:text-white">
                        <Instagram size={20} />
                    </a>
                    <a href="#" aria-label="YouTube" class="text-gray-400 hover:text-white">
                        <Youtube size={20} />
                    </a>
                    <a href="#" aria-label="GitHub" class="text-gray-400 hover:text-white">
                        <Github size={20} />
                    </a>
                    <a href="#" aria-label="LinkedIn" class="text-gray-400 hover:text-white">
                        <Linkedin size={20} />
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <slot />
</div>